{
	"name": "translon",
	"displayName": "Translon",
	"description": "",
	"publisher": "FusionDev",
	"version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Fus1onDev/Translon.git"
  },
  "bugs": "https://github.com/Fus1onDev/Translon/issues",
  "homepage": "https://github.com/Fus1onDev/Translon",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:translon.start"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "translon.start",
				"title": "Open Translator",
				"category": "Translon",
				"icon": {
					"light": "icons/light.svg",
					"dark": "icons/dark.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == plaintext || resourceLangId == markdown",
					"command": "translon.start",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"playwright-core": "^1.18.1",
		"uuid": "^8.3.2"
	}
}
